@model Network.DAL.EFModel.MembersOfConference


<div id="joinToConferDialog">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Принять участии в конференции</h4>
              
            </div>

            <div class="modal-body">
                @using (Html.BeginForm("JoinConference", "Conference", FormMethod.Post))
                {
                    @Html.HiddenFor(model => model.ConferenceId)
                    <p>Вы хотите принять участие в этой конференции?</p>
                    <div class="row">
                        <div class="form-group">
                            <div class="col-md-offset-8 col-md-4 ">
                                <button class="btn pull-right" type="submit">OK</button>
                            </div>
                        </div>
                    </div>
                }
                    
            </div>
        </div>
    </div>
</div>

