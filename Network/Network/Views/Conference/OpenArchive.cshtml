@model IEnumerable<Network.Views.ViewModels.ConferenceArchiveViewModel>

@{
    ViewBag.Title = "OpenArchive";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="panel container-show container">
    @foreach (var item in Model)
    {
        <div class="row data-index-list-events item">
            <div class="col-md-3">
                 <div class="item-body left">
                        <div class="title">
                            @if (item.Image != null)
                            {
                                <img class="user-img" src="data:image/png;base64, @Convert.ToBase64String(item.Image)" />
                            }
                            <img src="@Url.Content("~/Content/Pictures/default.jpeg")" />
                        </div>
                    </div>              
            </div>

            <div class="col-md-2">
                @if (item.Date != null)
                {
                    <div class="item-date left date-show">
                        <h4>@item.Date.Day</h4>
                        <strong>
                            <time class="date-show">@item.Date.ToString("MMMM").ToUpper()</time>
                        </strong>
                        <span>
                            <time class="date-show">@item.Date.ToString("dddd", new System.Globalization.CultureInfo("ru-RU"))</time>
                        </span>

                    </div>
                }

            </div>

            <div class="col-md-5">
                <div class="item-body left">
                    <div class="title">
                        @item.Thema
                    </div>
                </div>
            </div>

            <div class="col-md-2">
                <div class="item-body left">
                    <div class="title">
                        @item.Direction
                        </div>
                    </div>
            </div>



        </div>
    }
</div>

