@model IEnumerable<Network.Views.ViewModels.UserAtConference>


<div id="listMembersDialog">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Список поситетелей конференции</h4>
            </div>

            <div class="modal-body">
                @if (Model.Count() != 0)
                {
                    foreach (var item in Model)
                    {
                        <div class="row">
                            <div class="col-md-6">

                                @if (item.Image.Length != 0)
                                {
                                    <img class="image" src="data:image/png;base64, @Convert.ToBase64String(item.Image)" />
                                }
                                else
                                {
                                    <img class="image" style="border:solid;" src="@Url.Content("~/Content/Pictures/default.jpeg")" />
                                }
                            </div>


                            <div class="col-md-6">
                                @Html.DisplayFor(modelItem => item.Name)
                                @Html.DisplayFor(modelItem => item.Surname)
                            </div>

                        </div>

                    }

                }
                else
                {
                    <div class="col-md-12">
                        <p>На данный момент участников нет.</p>
                    </div>
                }



            </div>
        </div>
    </div>
</div>




