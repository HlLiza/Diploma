@model IEnumerable<Network.Views.ViewModels.UserAtConference>


<div id="listMembersDialog">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h4 class="modal-title  header-modal-st">Список поситетелей конференции</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            @if (Model.Count() != 0)
            {
                <div class="modal-body container-show">

                    @foreach (var item in Model)
                    {
                        <div class="row item-list">
                            <div class="col-5">

                                @if (item.Image != null)
                                { 
                                  <img class="item-image" src="data:image/png;base64, @Convert.ToBase64String(item.Image)" />
                                }
                                else
                                {
                                    <img class="item-image" src="@Url.Content("~/Content/Pictures/default.jpeg")" />
                                }
                            </div>


                            <div class="col-7">
                                @Html.DisplayFor(modelItem => item.Name)
                                @Html.DisplayFor(modelItem => item.Surname)
                            </div>

                        </div>

                    }
                </div>


            }
            else
            {
                <div class="col-md-12">
                    <p>На данный момент поситителей нет.</p>
                </div>
            }

        </div>
    </div>
</div>
