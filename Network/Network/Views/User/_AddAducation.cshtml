@model Network.Views.ViewModels.AducationInfo

<div id="addAddDialog">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header header-modal-st">
                <h4 class="modal-title">Добавление образования</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body" style="margin:15px 0 10px 20px;">
                @using (Ajax.BeginForm("AddAducation", null, new AjaxOptions
                {
                    HttpMethod = "POST",
                    UpdateTargetId = "dialogContent"
                }, new { @class = "form" }))
                {
                    <h3>@ViewBag.Message</h3>
                    @Html.ValidationSummary(true, "", new { @style = "color:red;" })
                    
                   
                    <div class="form-group ">
                        <input type="text" typeof="text" class="input-add-info" required  name="University" placeholder="УЧРЕЖДЕНИЕ" />
                        @Html.ValidationMessageFor(model => model.University, "", new { @style = "color:red;" })
                    </div>


                    <div class="form-group row">
                        <div class="col-md-6 col-lg-6 col-xs-6 col-sm-6 col-6 ">
                            @Html.DropDownListFor(model => model.StartYear, Enumerable.Range(1950, DateTime.Now.Year - 1950 + 1).Select(x => new SelectListItem() { Value = x.ToString(), Text = x.ToString() }), "Год начала", new { @class = "input-add-info year" })
                        </div>
                        <div class="col-md-6 col-lg-6 col-xs-6 col-sm-6 col-6">
                            @Html.DropDownListFor(model => model.GradYear, Enumerable.Range(1955, DateTime.Now.Year - 1950 + 1).Select(x => new SelectListItem() { Value = x.ToString(), Text = x.ToString() }), "Год завершения", new { @class = "input-add-info year" })
                        </div>
                    </div>


                    <input style="margin-left:160px;" type="submit" name="save" class="btn button-large element-pad" value="СОХРАНИТЬ" />
                }
            </div>


        </div>
    </div>
</div>




