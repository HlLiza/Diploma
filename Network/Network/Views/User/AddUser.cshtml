@model Network.Views.ViewModels.AddUserViewModel

<!-- MultiStep Form -->
@*<div class="row">*@
    <div class="col-md-6 col-md-offset-3">
        @using (Html.BeginForm("AddUser", "User", FormMethod.Post, null))
        {
            @Html.HiddenFor(x => x.AspUserId)
            @Html.AntiForgeryToken()
            <div id="regForm">
                <fieldset class="tab">
                    <h2 class="fs-title">Общая информация</h2>
                    <h3 class="fs-subtitle">Введите информацию о себе</h3>

                    <div class="form-group ">
                        <input type="text" class="input-add-info" name="Name" required="required" placeholder="Имя" />
                    </div>

                    <div class="form-group">
                        <input type="text" class="input-add-info" name="Surname" required="required" placeholder="Фамилия" />
                    </div>

                    <div class="form-group">
                        <input type="text" class="input-add-info" name="Skype" placeholder="Skype" />
                    </div>

                    <div class="form-group">
                        <input type="text" class="input-add-info" name="Direction" required="required" placeholder="Направление" />
                    </div>

                    <input type="button" name="next" id="nextBtn" class="next action-button form-control btn-add-info" value="Далее" onclick="nextPrev(1)" />
                </fieldset>
                <fieldset class="tab">
                    <h2 class="fs-title">Образование(необязательна для заполнения)</h2>
                    <h3 class="fs-subtitle">Добавьте информацию о своем образовании</h3>

                    <div class="form-group">
                        <input type="text" class="input-add-info" name="University" placeholder="Учреждение" />
                    </div>

                    <div class="form-group">
                        <input type="text" class="input-add-info" name="StartYear" placeholder="Год начала обучения" />
                    </div>
                    <div class="form-group">
                        <input type="text" class="input-add-info" name="GradYear" placeholder="Год окончания обучения" />
                    </div>

                            <div class="form-group">
                                <input type="submit" name="next" class="next action-button form-control btn-add-info marg" value="ОК" />

                                <input type="button" name="previous" id="prevBtn" class="previous action-button-previous form-control btn-add-info" value="Назад" onclick="nextPrev(-1)" />
                            </div>

                </fieldset>
            </div>
        }
    </div>

