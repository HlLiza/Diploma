@model Network.Views.ViewModels.AddUserViewModel

@{
    Layout = "~/Views/Shared/_LayoutLog.cshtml";
}


@using (Html.BeginForm("AddUser", "User", FormMethod.Post, null))
{
    @Html.HiddenFor(x => x.AspUserId)
    @Html.AntiForgeryToken()

    <div class="panel-form">
        <div class="panel-heading">
            <div class="title-head">ДОБАВЬТЕ</div>
        </div>
        


        <div id="regForm">
            <fieldset class="tab">
                <h4 class="style-text">ОБЩАЯ ИНФОРМАЦИЯ</h4>
                <div class="panel-body panel-body-reg style-text">
                    <div class="row">
                        <div class="col-lg-12">

                            <div class="form-group ">
                                <input type="text" class="input-add-info" name="Name" value="@Model.Name"  placeholder="Имя" />
                                @Html.ValidationSummary(true, "", new { @style = "color:red;" })
                            </div>

                            <div class="form-group">
                                <input type="text" class="input-add-info" name="Surname" value=@Model.Surname  placeholder="Фамилия" />
                                @Html.ValidationSummary(true, "", new { @style = "color:red;" })
                            </div>

                            <div class="form-group">
                                <input type="text" class="input-add-info" name="Skype" placeholder="Skype" />
                                @Html.ValidationSummary(true, "", new { @style = "color:red;" })
                            </div>

                            <div class="form-group">
                                <input type="text" class="input-add-info" name="Direction" placeholder="Направление" />
                                @Html.ValidationSummary(true, "", new { @style = "color:red;" })
                            </div>
                           
                            <input type="button" name="next" id="nextBtn" class="next btn button-large btn-default" style="margin-bottom:5px;" value="Далее" onclick="nextPrev(1)" />
                        </div>
                    </div>
                </div>
            </fieldset>

            <fieldset class="tab">
                <h2 class="style-text">ОБРАЗОВАНИЕ</h2>
                <div class="panel-body panel-body-reg style-text">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <input type="text" class="input-add-info" name="University" placeholder="Учреждение" />
                            </div>

                            <div class="form-group container">
                                <div class="row">
                                    <div class="col-md-5 col-lg-5 col-xs-5 col-sm-5 col-5">
                                        @Html.DropDownListFor(model => model.StartYear, Enumerable.Range(1950, DateTime.Now.Year - 1950 + 1).Select(x => new SelectListItem() { Value = x.ToString(), Text = x.ToString() }), "Год начала", new { @class = "input-add-info year" })
                                    </div>
                                    <div class="col-md-7 col-lg-7 col-xs-7 col-sm-7 col-7">
                                        @Html.DropDownListFor(model => model.GradYear, Enumerable.Range(1950, DateTime.Now.Year - 1950 + 1).Select(x => new SelectListItem() { Value = x.ToString(), Text = x.ToString() }), "Год завершения", new { @class = "input-add-info year" })
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <input type="button" name="previous" id="prevBtn" class="previous next button-large btn-default btn" value="Назад" onclick="nextPrev(-1)" />

                                <input type="submit" name="next" class="next button-large btn-default btn" value="ОК" />

                            </div>
                        </div>
                    </div>
                </div>
            </fieldset>
          </div>
    </div>














