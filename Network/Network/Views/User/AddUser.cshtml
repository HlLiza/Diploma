@model Network.Views.ViewModels.AddUserViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="col-md-6 col-md-offset-3">
        @using (Html.BeginForm("AddUser", "User", FormMethod.Post, null))
        {
            @Html.HiddenFor(x => x.AspUserId)
            @Html.AntiForgeryToken()
            <div id="regForm">
                <fieldset class="tab">
                    <h2 class="style-text">Общая информация</h2>
                    <h3 class="style-text">Введите информацию о себе</h3>

                    <div class="form-group ">
                        <input type="text" class="input-add-info" name="Name" placeholder="Имя" />
                    </div>

                    <div class="form-group">
                        <input type="text" class="input-add-info" name="Surname" placeholder="Фамилия" />
                    </div>

                    <div class="form-group">
                        <input type="text" class="input-add-info" name="Skype" placeholder="Skype" />
                    </div>

                    <div class="form-group">
                        <input type="text" class="input-add-info" name="Direction"  placeholder="Направление" />
                    </div>

                    <input type="button" name="next" id="nextBtn" class="next action-button form-control btn-add-info" value="Далее" onclick="nextPrev(1)" />
                </fieldset>
                <fieldset class="tab">
                    <h2 class="style-text">Образование</h2>
                    <h3 class="style-text">Добавьте информацию о своем образовании</h3>

                    <div class="form-group">
                        <input type="text" class="input-add-info" name="University" placeholder="Учреждение" />
                    </div>

                    <div class="form-group container">
                        <div class="row">
                            <div class="col-md-6 col-lg-6 col-xs-6 col-sm-6 col-6 ">
                                @Html.DropDownListFor(model => model.StartYear, Enumerable.Range(1950, DateTime.Now.Year - 1950 + 1).Select(x => new SelectListItem() { Value = x.ToString(), Text = x.ToString() }), "Год начала", new { @class = "input-add-info year" })
                            </div>
                            <div class="col-md-6 col-lg-6 col-xs-6 col-sm-6 col-6">
                                @Html.DropDownListFor(model => model.GradYear, Enumerable.Range(DateTime.Now.Year, DateTime.Now.Year - 2006 + 1).Select(x => new SelectListItem() { Value = x.ToString(), Text = x.ToString() }), "Год завершения", new { @class = "input-add-info year" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <input type="submit" name="next" class="next action-button form-control btn-add-info marg" value="ОК" />

                        <input type="button" name="previous" id="prevBtn" class="previous action-button-previous form-control btn-add-info" value="Назад" onclick="nextPrev(-1)" />
                    </div>

                </fieldset>
            </div>
        }
    </div>
