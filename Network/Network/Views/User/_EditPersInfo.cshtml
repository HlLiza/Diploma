@model Network.Views.ViewModels.EditPersInfViewModel

<div id="changePhotoDialog">
    <div class="modal-dialog ">
        <div class="modal-content">

            <div class="modal-header header-modal-st">
                <h4 class="modal-title">ИЗМЕНИТЬ ИНФОРМАЦИЮ О СЕБЕ</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <div class="modal-body" style="margin:15px 10px 10px 10px;">
                @using (Ajax.BeginForm("EditPersInfo", null, new AjaxOptions
                {
                    HttpMethod = "POST",
                    UpdateTargetId = "dialogContent"
                }, new { @class = "form" }))
                {
                    <h3>@ViewBag.Message</h3>
                    @Html.ValidationSummary(true, "", new { @style = "color:red;" })

                        <div class="form-group ">
                            <input type="text" typeof="text" class="input-add-info" required value=@Model.Name name="Name" placeholder="Имя" />
                            @Html.ValidationMessageFor(model => model.Name, "", new { @style = "color:red;" })
                        </div>

                        <div class="form-group">
                            <input type="text" typeof="text" class="input-add-info" required value=@Model.Surname name="Surname" placeholder="Фамилия" />
                            @Html.ValidationMessageFor(model => model.Surname, "", new { @style = "color:red;" })
                        </div>

                        <div class="form-group">
                            <input type="text" typeof="text" class="input-add-info" value=@Model.Skype name="Skype" placeholder="Skype" />
                        </div>

                        <div class="form-group">
                            <input type="text" typeof="text" class="input-add-info" value=@Model.Direction name="Direction" placeholder="Направление" />
                            @Html.ValidationMessageFor(model => model.Surname, "", new { @style = "color:red;" })
                        </div>

                        <input style="margin-left:160px;" type="submit" name="save" class="btn button-large element-pad" value="СОХРАНИТЬ"/>
                    }
            </div>
        </div>
    </div>
</div>

