@model IEnumerable<Network.Views.ViewModels.UserListViewModel>


@if (Model != null)
{
    <div id="result">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="row">
                    @if (item.Image.Length != 0)
                        {
                        <div class="col-lg-6">
                            <img class="image" src="data:image/png;base64, @Convert.ToBase64String(item.Image)" />
                        </div>
                    }
                    <div class="col-md-5">
                        @Html.DisplayFor(modelItem => item.Name)
                    </div>
                </div>
                    <hr />
            }
        </div>
    </div>
}

        



