@model Network.Models.RegisterViewModel


    @using (Html.BeginForm("Register", "Account", FormMethod.Post, null))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary("",new {@class="text-danger"})

                    <div class="col-md-4 col-md-offset-3">
                        <div class="panel panel-login">

                            <div class="panel-heading">
                                <div class="row">
                                    <div class="col-xs-6">
                                        <a href="#" class="active" id="login-form-link">Регистрация</a>
                                    </div>
                                </div>
                                <hr>
                            </div>


                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <form id="register-form" action="#" method="post" role="form" style="display: none;">
                                            <div class="form-group">
                                                <label for="username">Логин</label>
                                                <input type="text" autocomplete="on" name="email" id="username" tabindex="1" class="form-control" placeholder="Логин" value="">
                                               
                                            </div>

                                            <div class="form-group">
                                                <label for="password">Пароль</label>
                                                <input type="password" name="password" id="password" tabindex="2" class="form-control" placeholder="Пароль">
                                            </div>

                                            <div class="form-group">
                                                <label for="confirm-password">Подтвердите пароль</label>
                                                <input type="password" name="ConfirmPassword" id="confirm-password" tabindex="2" class="form-control" placeholder="Подтвердите пароль">
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label">Выберите свой тип пользователя </label>
                                                    <div class="form-inline form-check">

                                                            <input class="form-check-input" name="Role" type="radio" id="radioSecr" value="secretary">
                                                            <label class="form-check-label" for="secretary">секретарь</label>

                                                            <input class="form-check-input" name="Role" type="radio" id="radioMem" value="group_member">
                                                            <label class="form-check-label" for="group_member">научный сотрудник</label>
                                                    </div>
                                            </div>


                                            <div class="form-group">
                                                <div class="row">
                                                    <div class="col-sm-6 col-sm-offset-3">
                                                        <input type="submit" name="register-submit" id="register-submit" tabindex="4" class="form-control btn " value="OK">
                                                    </div>
                                                </div>
                                            </div>

                                            @*<input type="submit" name="register-submit" id="register-submit" tabindex="4" class="form-control btn " value="OK">*@

                                        </form>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                
    }



