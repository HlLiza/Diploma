@model Network.Models.RegisterViewModel

@using (Html.BeginForm("Register", "Account", FormMethod.Post, null))
{
    @Html.AntiForgeryToken()
    <div class="panel-form">
        <div class="panel-heading">
            <div class="title-head">РЕГИСТРАЦИЯ</div>
        </div>

        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="panel-body panel-body-reg style-text">
            <div class="row">
                <div class="col-lg-12">
                    
                    <div class="form-group">
                        <input type="text" autocomplete="on" name="email" required="required" id="username" tabindex="1" class="input-add-info" placeholder="Логин" value="">

                    </div>

                    <div class="form-group">
                        <input type="password" name="password" id="password" required="required" tabindex="2" class="input-add-info" placeholder="Пароль">
                    </div>

                    <div class="form-group">
                        <input type="password" name="ConfirmPassword" id="confirm-password" required="required" tabindex="2" class="input-add-info" placeholder="Подтвердите пароль">
                    </div>

                    <div class="form-group">
                        <input type="text" name="PhoneNumber" id="add-phone" tabindex="2" required="required" class="input-add-info" placeholder="Введите номер телефона">
                    </div>

                    <div class="form-group">
                        <label class="control-label text-item">Выберите свой тип пользователя </label>
                        <div class="row form-inline form-check">
                            <div class="col">
                                <input class="form-check-input" name="Role" type="radio" id="radioSecr" value="secretary">
                                <label class="form-check-label text-item" for="secretary">секретарь</label>
                            </div>
                            <div class="col">
                                <input class="form-check-input" name="Role" type="radio" id="radioMem" value="group_member">
                                <label class="form-check-label text-item" for="group_member">научный сотрудник</label>
                            </div>
                        </div>
                    </div>


                    <div class="form-group">
                       <input type="submit" name="register-submit" id="register-submit" tabindex="4" class="button-large btn-finish" value="Продолжить">
                    </div>
                    <p  class="form-group text-item">
                        Уже с нами?
                        <a href="@Url.Action("Login", "Account")">Заходите</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
    
}
