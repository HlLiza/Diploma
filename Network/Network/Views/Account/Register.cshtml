@model Network.Models.RegisterViewModel

@using (Html.BeginForm("Register", "Account", FormMethod.Post, null))
{
    @Html.AntiForgeryToken()
        
    <div id="fullscreen_bg" class="fullscreen_bg">
        <div id="regContainer">
                <div class="col-md-4 col-md-offset-3">
                    <div class="panel">
                        <div class="panel-heading">
                            <div class="row style-text">
                                <h4><a href="#" class="active" id="login-form-link">Регистрация</a></h4>
                                <hr>
                            </div>
                        </div>


                        <div class="panel-body panel-body-reg style-text">
                            <div class="row">
                                <div class="col-lg-12">
                                        <div class="form-group">
                                            @*<label for="username">Логин</label>*@
                                            <input type="text" autocomplete="on" name="email" required="required" id="username" tabindex="1" class="input-add-info" placeholder="Логин" value="">

                                        </div>

                                        <div class="form-group">
                                            @*<label for="password">Пароль</label>*@
                                            <input type="password" name="password" id="password" required="required" tabindex="2" class="input-add-info" placeholder="Пароль">
                                        </div>

                                        <div class="form-group">
                                            @*<label for="confirm-password">Подтвердите пароль</label>*@
                                            <input type="password" name="ConfirmPassword" id="confirm-password" required="required" tabindex="2" class="input-add-info" placeholder="Подтвердите пароль">
                                        </div>

                                        <div class="form-group">
                                            @*<label for="add-phone">Введите номер телефона</label>*@
                                            <input type="text" name="PhoneNumber" id="add-phone" tabindex="2" required="required" class="input-add-info" placeholder="Введите номер телефона">
                                        </div>

                                        <div class="form-group">
                                            <label class="control-label">Выберите свой тип пользователя </label>
                                            <div class="form-inline form-check">

                                                <input class="form-check-input" name="Role" type="radio" id="radioSecr" value="secretary">
                                                <label class="form-check-label" for="secretary">секретарь</label>

                                                <input class="form-check-input" name="Role" type="radio" id="radioMem" value="group_member">
                                                <label class="form-check-label" for="group_member">научный сотрудник</label>
                                            </div>
                                        </div>

                                        @Html.ValidationSummary("", new { @class = "text-danger" })

                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-sm-6 col-sm-offset-3">
                                                    <input type="submit" name="register-submit" id="register-submit" tabindex="4" class="form-control btn button-registr" value="Продолжить">
                                                </div>
                                            </div>
                                        </div>
                                    <p class="change_link">
                                        Уже с нами?
                                        <a href="@Url.Action("Login", "Account")" class="to-register">Заходите</a>
                                    </p>

                                </div>
                            </div>

                        </div>
                    </div>
                </div>
        </div>

    </div>
}
