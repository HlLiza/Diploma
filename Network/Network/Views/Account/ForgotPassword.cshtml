@model Network.Models.ForgotPasswordViewModel

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4 class="style-text">Восстановление пароля по адресу электронной почты.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div id="fullscreen_bg" class="fullscreen_bg">
        <div id="regContainer">
            <div class="col-md-4 col-md-offset-3">
                <div class="panel container">


                    <div class="panel-body panel-body-reg style-text">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label for="username">Введите свой логин</label>
                                    <input type="text" name="Email" id="username" required="required" tabindex="1" class="input-add-info" placeholder="Email" value="">
                                </div>

                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-6 col-sm-offset-3">
                                            <input type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn button-registr" value="Войти">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



