@model Network.Models.LoginViewModel

<h2>@ViewBag.Title</h2>




<div class="panel-form">
    <div class="panel-heading">
        <div class="title-head">ВХОД</div>
    </div>
       
    @Html.Partial("_OAuth")



@using (Html.BeginForm("Login", "Account", new { ReturnUrl = Request["ReturnUrl"] }, FormMethod.Post, null))
{
    @Html.AntiForgeryToken()


            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="panel-body panel-body-reg style-text">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            <input type="text" name="LoginEmail" id="username" required="required" tabindex="1" class="input-add-info" placeholder="Email" value="">
                        </div>
                        <div class="form-group">
                            <input type="password" name="LoginPassword" id="password" required="required" tabindex="2" class="input-add-info" placeholder="Пароль">
                        </div>
                        <div class="form-group text-center">
                            <input type="checkbox" tabindex="3" class="" name="remember" id="remember">
                            <label class="text-item" for="remember"> Запомнить меня?</label>
                        </div>

                        <div class="form-group text-center">
                            <a href="@Url.Action("ForgotPassword","Account")" class="text-item"> Забыли пароль?</a>
                        </div>



                        <div class="form-group">
                             <input type="submit" name="login-submit" id="login-submit" tabindex="4" class="btn button-large btn-default" value="Войти">
                        </div>

                        <p class="form-group text-item">
                            Еще не с нами?
                            <a href="@Url.Action("Register","Account")">Присоединятесь!</a>
                        </p>
                    </div>
                </div>
            </div>
    }
</div>

