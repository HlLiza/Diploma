
@model Network.Models.LoginViewModel
<h2>@ViewBag.Title</h2>


@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, null))
{
    @Html.AntiForgeryToken()

    <div id="fullscreen_bg" class="fullscreen_bg">
        <div id="regContainer">
            <div class="col-md-4 col-md-offset-3">
                <div class="panel">
                    <div class="panel-heading">
                        <div class="row style-text">
                            <h4><a href="#" class="active" id="login-form-link">Логин</a></h4>
                            <hr>

                        </div>
                    </div>

                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="panel-body panel-body-reg style-text">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label for="username">Логин</label>
                                    <input type="text" name="LoginEmail" id="username" required="required" tabindex="1" class="form-control" placeholder="Email" value="">
                                </div>
                                <div class="form-group">
                                    <label for="password">Пароль</label>
                                    <input type="password" name="LoginPassword" id="password" required="required" tabindex="2" class="form-control" placeholder="Пароль">
                                </div>
                                <div class="form-group text-center">
                                    <input type="checkbox" tabindex="3" class="" name="remember" id="remember">
                                    <label for="remember"> Запомнить меня?</label>
                                </div>

                                <div class="form-group text-center">
                                    <a href="@Url.Action("ForgotPassword","Account")" class="to_register"> Забыли пароль?</a>
                                </div>

                              

                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-6 col-sm-offset-3">
                                            <input type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn button-registr" value="Войти">
                                        </div>
                                    </div>
                                </div>

                                <p class="change_link">
                                    Еще не с нами?
                                    <a href="@Url.Action("Register","Account")" class="to_register">Присоединятесь!</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

