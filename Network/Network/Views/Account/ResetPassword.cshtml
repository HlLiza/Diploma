@model Network.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Сброс пароля";
}


@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Code)



    <div id="fullscreen_bg" class="fullscreen_bg">
        <div id="regContainer">
            <div class="col-md-4 col-md-offset-3">
                <div class="panel container">
                    <div class="panel-heading">
                        <div class="row style-text">
                            <h4><a href="#" class="active" id="login-form-link">Сброс пароля</a></h4>
                            <hr>
                        </div>
                    </div>


                    <div class="panel-body panel-body-reg style-text">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label for="username">Логин</label>
                                    <input type="text" autocomplete="on" name="Email" required="required" id="username" tabindex="1" class="form-control" placeholder="Логин" value="">

                                </div>

                                <div class="form-group">
                                    <label for="password">Пароль</label>
                                    <input type="password" name="password" id="Password" required="required" tabindex="2" class="form-control" placeholder="Пароль">
                                </div>

                                <div class="form-group">
                                    <label for="Confirm-password">Подтвердите пароль</label>
                                    <input type="password" name="ConfirmPassword" id="confirm-password" required="required" tabindex="2" class="form-control" placeholder="Подтвердите пароль">
                                </div>

                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-6 col-sm-offset-3">
                                            <input type="submit" name="register-submit" id="register-submit" tabindex="4" class="form-control btn button-registr" value="Сбросить">
                                        </div>
                                    </div>
                                </div>
                             

                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>

   
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
