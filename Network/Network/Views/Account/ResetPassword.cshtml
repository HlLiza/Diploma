@model Network.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Сброс пароля";
}

@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Code)
    <div class="panel-form">
        <div class="panel-heading">
            <div class="title-head">СБРОС ПАРОЛЯ</div>
        </div>

        <div class="panel-body panel-body-reg style-text">
            <div class="row">
                <div class="col-lg-12">

                    <div class="form-group">
                        <input type="text" autocomplete="on" name="Email" required="required" id="username" tabindex="1" class="input-add-info" placeholder="Логин" value="">
                    </div>

                    <div class="form-group">
                        <input type="password" name="password" id="Password" required="required" tabindex="2" class="input-add-info" placeholder="Пароль">
                    </div>

                    <div class="form-group">
                        <input type="password" name="ConfirmPassword" id="confirm-password" required="required" tabindex="2" class="input-add-info" placeholder="Подтвердите пароль">
                    </div>

                    <div class="form-group">
                        <input type="submit" name="register-submit" id="register-submit" tabindex="4" class="button-large btn-finish" value="Сбросить">
                    </div>

                </div>
            </div>
        </div>
    </div>

}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
