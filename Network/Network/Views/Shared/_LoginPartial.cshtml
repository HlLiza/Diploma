@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right"}))
    {
        @Html.AntiForgeryToken()

        <div class="row" style="float:right;padding-top:5px;">
            <div class="nav navbar-nav navbar-right btn-marg-log-off  item-hover">
                <a href="@Url.Action("Index","User")">
                    <span style="color:#007bff;" class="fa fa-home"></span>
                    @User.Identity.GetUserName()
                </a>
            </div>

            

            <div class="nav navbar-nav navbar-right btn-marg-log-off  item-hover">
                <a href="javascript:document.getElementById('logoutForm').submit()">
                    <span style="color:#007bff;" class="fa fa-sign-out"></span>
                    ВЫЙТИ
                </a>
            </div>
        </div>
       
    }
}
else
{
    <div class="row disp-twice-but">
        <button type="button" class="btn button-large btn-marg " onclick="location.href='@Url.Action("Register","Account",new { id = "registerLink" })'">РЕГИСТРАЦИЯ</button>
        <button type="button" class="btn button-large btn-marg " onclick="location.href='@Url.Action("Login","Account",new { id = "loginLink" })'">ВХОД</button>
    </div>
}
