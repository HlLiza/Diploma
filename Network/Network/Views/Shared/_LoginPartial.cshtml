@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Здравствуйте, " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Выйти</a></li>
    </ul>
    }
}
else
{
    <div class="row disp-twice-but">
        <button type="button" class="btn button-large btn-marg " onclick="location.href='@Url.Action("Register","Account",new { id = "registerLink" })'">РЕГИСТРАЦИЯ</button>
        <button type="button" class="btn button-large btn-marg " onclick="location.href='@Url.Action("Login","Account",new { id = "loginLink" })'">ВХОД</button>
    </div>
}
