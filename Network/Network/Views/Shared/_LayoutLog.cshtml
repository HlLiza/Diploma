@using System.Web.UI.WebControls
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <header>
        <!-- Fixed navbar -->
    
            <nav class="navbar navbar-expand-md navbar-dark fixed-top head-background-col justify-content-between">
                <div class="container">
                    <div class="row">
                        <div class="col-md-4">
                            <a class="navbar-brand" href="#">Научное сообщество</a>
                        </div>
                        <div class="col-md-6 padd">
                            @Html.Partial("_Login")
                        </div>
                        <div class="col-md-2 padd">
                            <a class="link-forgot-password" tabindex="1" href="@Url.Action("ForgotPassword","Account")">Забыли пароль?</a>
                        </div>
                    </div>
                 </div>
                
</nav>
      
    </header>
    <main role="main" class="container">
        @RenderBody()
    </main>

    <footer class="footer footer-main">
    </footer>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/modernizr")
        @RenderSection("scripts", required: false)
</body>
</html>
