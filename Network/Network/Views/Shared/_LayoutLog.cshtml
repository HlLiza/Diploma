@using System.Web.UI.WebControls
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <!-- Fixed navbar -->
        <nav class="navbar navbar-expand-md navbar-dark fixed-top head-background-col">           
                <div class="col-3">
                    <a class="navbar-brand" href="#">Научное сообщество</a>
                </div>
                <div class="col-6">
                    @*@Html.Partial("~/Views/Account/_Login.cshtml")*@
                </div>
                <div class="col-3">
                    <a class="link-forgot-password" tabindex="1" href="@Url.Action("ForgotPassword","Account")">Забыли пароль?</a>
                </div>
        </nav>
    </header>
    <main role="main" class="container form">
        @RenderBody()
    </main>

    <footer class="footer footer-main">
    </footer>

        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)



</body>
</html>
