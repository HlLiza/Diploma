@if (Model.Count() > 0)
{

    <div id="id=" userList"">
        @foreach (var item in Model)
        {
            <div class="row item-user">
                <div class="col-md-1 form-check medium" style="padding: 70px 30px 30px 60px;">
                    @using (Html.BeginForm("AddMembers", "Group", FormMethod.Post, null))
                    {

                        <input type="hidden" value="@item.Id" id="userId" name="userId" />
                        <input type="hidden" value="@ViewBag.GroupId" id="groupId" name="groupId" />
                        <div class="form-group">
                            <button  class="form-check-input" type="submit"> </button>
                        </div>
                    }
                </div>
                <div class="col-md-3">
                    @if (item.Image != null)
                    {
                        <div>
                            <img class="user-img" src="data:image/png;base64, @Convert.ToBase64String(item.Image)" />
                        </div>
                    }
                    else
                    {
                        <div>
                            <img class="user-img" src="@Url.Content("~/Content/Pictures/default.jpeg")" alt="">
                        </div>
                    }
                </div>
                <div class="col-md-4" style="padding-top: 72px;">
                    @Html.DisplayFor(modelItem => item.Surname)
                    @Html.DisplayFor(modelItem => item.Name)
                </div>
                <div class="col-md-3" style="padding-top: 72px;">
                    @Html.DisplayFor(modelItem => item.Direction)
                </div>
            </div>
            <hr />
        }
    </div>

}
    }
    else
    {
<div class="row item-user" style="padding-left: 35px;">
