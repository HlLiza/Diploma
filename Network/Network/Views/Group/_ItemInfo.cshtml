@model Network.Views.ViewModels.GroupInfo


<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">

            <div class="modal-header header-modal-st">
                <h4 class="modal-title">Группа</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <div class="container">
                    <div class="row">
                        <div class="col-6">
                            @Html.DisplayNameFor(k => Model.Direction)
                        </div>

                        <div class="col-6">
                            @Html.DisplayFor(k => Model.Direction)
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-6">
                            @Html.DisplayNameFor(k => Model.NameProject)
                        </div>

                        <div class="col-6">
                            @Html.DisplayFor(k => Model.NameProject)
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-6">
                            <label>РУКОВОДИТЕЛЬ</label>
                        </div>
                        <div class="col-6">
                            @Html.DisplayFor(k => Model.Head.Name)
                            @Html.DisplayFor(k => Model.Head.Surname)
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-6">
                            @Html.DisplayNameFor(k => Model.DateStart)
                        </div>
                        <div class="col-6">
                            @Html.DisplayFor(k => Model.DateStart)
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-6">
                            @Html.DisplayNameFor(k => Model.DateFinish)
                        </div>
                        <div class="col-6">
                            @Html.DisplayFor(k => Model.DateFinish)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


